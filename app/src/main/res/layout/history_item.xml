<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryText"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBasket1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="basket 1"
                android:textColor="@color/pickerWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvBasketColor1"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:fontFamily="casual"
                android:onClick="onBasketColorClick"
                android:tag="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBasket2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="basket 2"
                android:textColor="@color/pickerWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvBasketColor2"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:onClick="onBasketColorClick"
                android:tag="2" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBasket3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="basket 3"
                android:textColor="@color/pickerWhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvBasketColor3"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:onClick="onBasketColorClick"
                android:tag="3" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>